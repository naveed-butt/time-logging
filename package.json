{
	"name": "time-tracker-ado",
	"displayName": "Time Tracker for Azure DevOps",
	"description": "Track time spent on Azure DevOps work items directly from VS Code",
	"version": "1.0.0",
	"publisher": "naveed-butt",
	"license": "MIT",
	"icon": "media/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/naveed-butt/time-logging"
	},
	"bugs": {
		"url": "https://github.com/naveed-butt/time-logging/issues"
	},
	"homepage": "https://github.com/naveed-butt/time-logging#readme",
	"galleryBanner": {
		"color": "#0078d4",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"time-tracker",
		"azure-devops",
		"productivity",
		"ado",
		"time-logging"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "timeTracker.startTimer",
				"title": "Start Timer",
				"category": "Time Tracker"
			},
			{
				"command": "timeTracker.stopTimer",
				"title": "Stop Timer",
				"category": "Time Tracker"
			},
			{
				"command": "timeTracker.pauseTimer",
				"title": "Pause Timer",
				"category": "Time Tracker"
			},
			{
				"command": "timeTracker.resumeTimer",
				"title": "Resume Timer",
				"category": "Time Tracker"
			},
			{
				"command": "timeTracker.syncToAdo",
				"title": "Sync Time Entries to Azure DevOps",
				"category": "Time Tracker"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "timeTracker",
					"title": "Time Tracker",
					"icon": "media/clock.svg"
				}
			]
		},
		"views": {
			"timeTracker": [
				{
					"type": "webview",
					"id": "timeTracker.mainView",
					"name": "Time Tracker"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm run compile:extension && npm run compile:webview",
		"compile:extension": "tsc -p tsconfig.extension.json",
		"compile:webview": "vite build",
		"build": "npm run compile",
		"watch:extension": "tsc -watch -p tsconfig.extension.json",
		"watch:webview": "vite build --watch",
		"dev": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
		"lint": "eslint src --ext ts,tsx"
	},
	"dependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	},
	"devDependencies": {
		"@types/node": "^20.19.30",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@types/vscode": "^1.108.1",
		"@vitejs/plugin-react": "^5.1.2",
		"concurrently": "^8.2.2",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	}
}
