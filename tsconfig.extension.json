{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node16",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/webview/**/*", "node_modules"]
}
